<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: #ffffffff;" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.newproj.controllers.LoginController">
   <children>
      <StackPane style="-fx-background-color: white;" AnchorPane.bottomAnchor="40.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="40.0">
         <children>
             <VBox alignment="CENTER" maxWidth="400" spacing="20" style="-fx-background-color: #f4f4f4; -fx-background-radius: 10;">
                 <padding>
                     <Insets bottom="40" left="40" right="40" top="40" />
                 </padding>
                 
                             <Text style="-fx-font-size: 24; -fx-font-weight: bold;" text="Log In" />
                 <Text style="-fx-font-size: 14; -fx-fill: #666666;" text="TO HOSTEL MANAGEMENT SYSTEM" />
                 
                             <VBox spacing="10">
                     <Label text="Username" />
                     <TextField fx:id="userNameTF" promptText="Enter username" style="-fx-background-radius: 5;" />
                 </VBox>
                 
                             <VBox spacing="10">
                     <Label text="Password" />
                     <PasswordField fx:id="passwordTF" promptText="Enter password" style="-fx-background-radius: 5;" />
                 </VBox>
                 
                             <Button fx:id="loginButton" onAction="#login" style="-fx-background-color: black; -fx-text-fill: white; -fx-background-radius: 20; -fx-min-width: 300; -fx-min-height: 40;" text="Log In" />
                 
                             <HBox alignment="CENTER" spacing="5" />
             </VBox>
         </children>
      </StackPane>
   </children>
</AnchorPane>
